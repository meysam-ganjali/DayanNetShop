@model IEnumerable<DayanShop.Domains.Entities.ChildCategory>
@{
    ViewData["Title"] = "لیست زیردسته ها";
}
<partial name="_Notification" />
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">@ViewData["Title"]</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Home">داشبورد</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">دسته بندی فرزند</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between flex-wrap">
                    <div class="card-title">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="دنبال چی می گردی؟" aria-label="Search For Parent Category" aria-describedby="basic-addon2">
                            <button class="input-group-text bg-primary text-white" id="basic-addon2"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                    <div class="card-subtitle">
                        <button onclick="ShowModalAddchildCategory()" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;ثبت دسته بندی پدر</button>
                    </div>
                </div>
                <div class="table-responsive p-1">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>عنوان دسته</th>
                                <th>
                                    <i class=" mdi mdi-settings"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4">
                                        <p class="text-danger text-center">دسته بندی برای نمایش وجود ندارد. ابتدا یک دسته ثبت کنید!</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var childCat in Model)
                                {
                                    <tr>
                                        <td>کد :@childCat.Id</td>
                                        <td>

                                            <p title="@childCat.ChildTitle">@childCat.ChildTitleSlug</p>
                                        </td>
                                        <td>
                                            <div class="btn-group-sm">
                                                <button onclick="ShowModalEditchildCategory()" type="button" class="btn btn-primary"><i class="fa fa-edit"></i> ویرایش</button>
                                                <button onclick="DeleteParent()" class="btn btn-danger"><i class="fa fa-trash"></i> حذف</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>