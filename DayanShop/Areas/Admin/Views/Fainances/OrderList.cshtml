@addTagHelper *, LazZiya.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using DayanShop.Utilities.Helpers
@using DayanShop.Domains.Entities
@model DayanShop.Application.StoreServices.Fainances.ReslutGetOrderDto
@{
    ViewData["Title"] = "لیست محصولات فروشگاه";
}
<partial name="_Notification" />
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">@ViewData["Title"]</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Home">داشبورد</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">لیست محصولات</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between flex-wrap">
                    <div class="card-title">
                        <form class="input-group mb-3">
                            <div class="btn-group show">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    دنبا ل چی میگردی؟
                                </button>
                                <div class="dropdown-menu show" x-placement="top-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, -204px, 0px);">
                                    <a class="dropdown-item" href="/Admin/Fainances/OrderList?orderState=Processing">فاکتورهای جدید <i class="badge bg-success">3</i></a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Admin/Fainances/OrderList?orderState=Canceled">فاکتورهای کنسل شده <i class="badge bg-danger">3</i></a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Admin/Fainances/OrderList?orderState=Delivered">فاکتورهای تحویلی <i class="badge bg-success">3</i></a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="row w-100 justify-content-center">
                        <p class="text-center text-primary">
                            برای ویرایش ، حذف، افزودن عکس و افزودن بررسی به قسمت جزئیات محصول مراجعه کنید
                        </p>
                    </div>
                </div>

                <div class="table-responsive p-1">
                    <table class="table table-bordered table-hover table-striped" style="overflow: scroll">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>تاریخ ایجاد</th>
                                <th>به نام</th>
                                <th>مبلغ فاکتور</th>
                                <th>وضعیت</th>
                                <th>
                                    <i class=" mdi mdi-settings"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model == null)
                            {
                                <tr>
                                    <td colspan="7">
                                        <p class="text-danger text-center">محصولی برای نمایش یافت نشد. ابتدا یک دسته ثبت کنید!</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var p in Model.OrderLst)
                                {
                                    <tr>
                                        <td>@p.Id</td>
                                        <td>
                                            <p data-toggle="tooltip" data-placement="top" title data-original-title="@p.CreatedDate">@p.CreatedDate.ToPersianDate()</p>
                                        </td>
                                       
                                            <td>@p.ApplicationUser.FirstName @p.ApplicationUser.LastName</td>
                                        <td>@p.TootalAmount.ToString("#,##") تومان</td>
                                        @switch (p.OrderState)
                                           {
                                               case OrderState.Processing:
                                               {
                                                    <td class="text-primary"><i class="fa fa-clock bg-primary badg text-white"></i>&nbsp; در حال پردازش</td>
                                                   break;
                                               }
                                               case OrderState.Canceled:
                                               {
                                                    <td class="text-danger"><i class="fas fa-ban bg-danger badg text-white"></i>&nbsp;کنسل شده</td>
                                                   break;
                                               }
                                               case OrderState.Delivered:
                                               {
                                                   <td>تحویل داده</td>
                                                   break;
                                               }
                                           }

                                        <td>
                                            <div class="btn-group-sm">
                                                <button class="btn btn-info"><i class="fa fa-eye"></i>&nbsp; جزئیات</button>
                                                <button class="btn btn-success"><i class="fa fa-check"></i>&nbsp;تحویل داده شد</button>
                                                <button class="btn btn-danger"><i class="fas fa-ban"></i>&nbsp;کنسل</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="row justify-content-center">

                        <nav aria-label="Page navigation example">
                            <paging total-records="@Model.RowCount"
                                    page-no="@Model.CurrentPage"
                                    page-size="@Model.PageSize"
                                    show-prev-next="true"
                                    show-total-pages="false"
                                    show-total-records="false"
                                    show-page-size-nav="true"
                                    show-first-numbered-page="true"
                                    show-last-numbered-page="true"
                                    query-string-key-page-no="Page"
                                    query-string-key-page-size="PageSize"
                                    gap-size="2">
                            </paging>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>