@addTagHelper *, LazZiya.TagHelpers

@{
    ViewData["Title"] = "لیست محصولات فروشگاه";
}
<partial name="_Notification" />
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">@ViewData["Title"]</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Home">داشبورد</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">لیست محصولات</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between flex-wrap">
                    <div class="card-title">
                        <form action="/Admin/Product/Index" class="input-group mb-3">
                            <div class="btn-group show">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    دنبا ل چی میگردی؟
                                </button>
                                <div class="dropdown-menu show" x-placement="top-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, -204px, 0px);">
                                    <a class="dropdown-item" href="javascript:void(0)">فاکتورهای جدید <i class="badge bg-success">3</i></a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="javascript:void(0)">فاکتورهای کنسل شده <i class="badge bg-danger">3</i></a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="javascript:void(0)">فاکتورهای تحویلی <i class="badge bg-success">3</i></a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-subtitle">
                        <a href="/Admin/Product/CreateProduct" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;ثبت محصول جدید</a>
                    </div>
                    <div class="row w-100 justify-content-center">
                        <p class="text-center text-primary">
                            برای ویرایش ، حذف، افزودن عکس و افزودن بررسی به قسمت جزئیات محصول مراجعه کنید
                        </p>
                    </div>
                </div>

                <div class="table-responsive p-1">
                    <table class="table table-bordered table-hover table-striped" style="overflow: scroll">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>نام محصول</th>
                                <th>امتیاز</th>
                                <th>تعداد بازدید</th>
                                <th>قیمت</th>
                                <th>تخفیفات</th>
                                <th>
                                    <i class=" mdi mdi-settings"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td colspan="7">sssssssssss</td>
                        </tr>
